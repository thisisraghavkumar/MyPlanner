@model IEnumerable<MyPlanner.Data.Models.PlannerTask>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>My Planner</h1>
    <p class="lead">Here is what you have to accomplish. All the very best!</p>
    <p>There are @Model.Count() tasks in all.</p>
    <p>@DateTime.Now</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6"><h3>Important</h3></div>
        <div class="col-md-6"><h3>Not Important</h3></div>
    </div>
    <div class="row">
        <div class="col-md-6 border border-right border-dark">
            @foreach (var task in Model)
            {
                if (task.IsImportant && task.IsUrgent)
                {
                    <div class="row">
                        <div class="col">
                            <h4>@task.Subject</h4>
                            <p>Due : @task.Due</p>
                            <p>@task.CompletedSteps / @task.TotalSteps @task.Steps</p>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-md-6">
            @foreach (var task in Model)
            {
                if (!task.IsImportant && task.IsUrgent)
                {
                    <div class="row">
                        <div class="col">
                            <h4>@task.Subject</h4>
                            <p>Due : @task.Due</p>
                            <p>@task.CompletedSteps / @task.TotalSteps @task.Steps</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            @foreach (var task in Model)
            {
                if (task.IsImportant && !task.IsUrgent)
                {
                    <div class="row">
                        <div class="col">
                            <h4>@task.Subject</h4>
                            <p>Due : @task.Due</p>
                            <p>@task.CompletedSteps / @task.TotalSteps @task.Steps</p>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-md-6">
            @foreach (var task in Model)
            {
                if (!task.IsImportant && !task.IsUrgent)
                {
                    <div class="row">
                        <div class="col">
                            <h4>@task.Subject</h4>
                            <p>Due : @task.Due</p>
                            <p>@task.CompletedSteps / @task.TotalSteps @task.Steps</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>